run = "kotlinc -d main.jar main.kt && kotlin -classpath main.jar MainKt"

entrypoint = "main.kt"

hidden=["*.jar"]
modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[packager]
language = "java"

[packager.features]
packageSearch = true

[languages.kotlin]
pattern = "**/*.{kt,kts,java}"

[languages.kotlin.languageServer]
start = ["kotlin-language-server"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Daily Kharcha"

[[workflows.workflow]]
name = "Daily Kharcha"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd daily-kharcha && npm run dev"
waitForPort = 5000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37321
externalPort = 3000
